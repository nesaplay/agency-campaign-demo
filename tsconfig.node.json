{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": ["api/**/*.ts", "api/**/*.js"],
  "exclude": ["node_modules", "dist", "src"]
}
